<div class="card">
  <h2>Students</h2>

  <div class="action-bar">
    <a href="/new">+ Add Student</a>

    <form action="/search" method="get">
      <input type="text" name="q" placeholder="Search by name">
      <button>Search</button>
    </form>
  </div>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @students.each do |s| %>
      <tr>
        <td data-label="Name"><%= s[:name] %></td>
        <td data-label="Age"><%= s[:age] %></td>
        <td data-label="Actions">
          <div class="actions">
            <a class="edit-btn" href="/edit/<%= s[:_id] %>">Edit</a>
            <a class="delete-btn" href="/delete/<%= s[:_id] %>">Delete</a>
          </div>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
