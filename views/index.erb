<div class="card">
  <h2>Students</h2>

  <div class="action-bar">
    <a href="/new">+ Add Student</a>

    <form action="/search" method="get">
      <input type="text" name="q" placeholder="Search by name">
      <button>Search</button>
    </form>
  </div>

  <table>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>

    <% @students.each do |s| %>
    <tr>
      <td><%= s[:name] %></td>
      <td><%= s[:age] %></td>
      <td>
        <div class="actions">
          <a class="edit-btn" href="/edit/<%= s[:_id] %>">âœ Edit</a>
          <a class="delete-btn" href="/delete/<%= s[:_id] %>">ğŸ—‘ Delete</a>
        </div>
      </td>
    </tr>
    <% end %>
  </table>
</div>
