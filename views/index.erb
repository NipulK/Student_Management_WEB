<div class="header">
  <h2 style="margin: 0; color: #2c3e50; flex-grow: 1;">Students List</h2>
  <a href="/new" class="add-student-btn">+ Add New Student</a>
</div>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @students && @students.length > 0 %>
      <% @students.each do |s| %>
        <tr>
          <td><strong><%= s[:name] %></strong></td>
          <td><%= s[:age] %></td>
          <td>
            <div class="action-buttons">
              <a href="/edit/<%= s[:_id] %>" class="edit-btn">âœï¸ Edit</a>
              <a href="/delete/<%= s[:_id] %>" class="delete-btn">ğŸ—‘ï¸ Delete</a>
            </div>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="3" style="text-align: center; padding: 40px; color: #999;">
          No students found. <a href="/new" style="color: #667eea; text-decoration: underline;">Add one now</a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
